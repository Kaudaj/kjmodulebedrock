grumphp:
  tasks:
    phpcsfixer:
      config: tests/php/.php_cs.dist
    phpstan:
      configuration: tests/php/phpstan.neon.dist
    eslint:
      bin: _dev/node_modules/.bin/eslint
      config: _dev/.eslintrc.js
    header-stamp:
      metadata:
        task: shell
      scripts:
        - [
            "-c",
            'vendor/bin/header-stamp --dry-run 
              --extensions="php,js,css,scss,tpl,html.twig,vue" --exclude="vendor,node_modules" --license="_dev/header-stamp/afl.txt"',
          ]
  parallel:
    enabled: false
  fixer:
    enabled: true
    fix_by_default: true
